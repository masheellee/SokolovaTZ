          .sponsors-banks-item.sponsors-banks-item__visa
        .support Тех. поддержка: 8(800)700-00-00 © 2018 HELYFLY. All Rights Reserved.
block pop-up
    .pop-up
      .form
        p Бронирование
        form(method="GET" action="form.php")
          .form__headline Дата
            span.form__headline-red *
          input.form_margin(type="text" name="date" placeholder="01.01.2019")
          .form__headline Email
            span.form__headline-red *
          input.form_margin(type="email" name="user-email" placeholder="Электронная почта")
          .form__headline Имя
            span.form__headline-red *
          input.form_margin(type="text" name="user-name" placeholder="Ваше имя")
          .form__headline Фамилия
            span.form__headline-red *
          input.form_margin(type="text" name="user-surname" placeholder="Ваша фамилия")
          .form__headline Телефон
            span.form__headline-red *
          input.form_margin(type="number" name="user-phone" placeholder="+7 (905) 184-81-40")
          .form__headline Данные карты
            span.form__headline-red *
          input(type="number"  name="user-card" placeholder="Номер карты")
          .card-box.flex  
            input.card-box__item.form_margin(type="number" name="user-card-exp" placeholder="Срок действия")
            input.card-box__item.form_margin(type="number" name="CVV" placeholder="CVV")
          .card-box.flex  
            input(type="checkbox" name="checkbox") 
            .form_margin Я согласен с пользовательским соглашением и публичной офертой
          button(type="submit" id="checkbox" value="Submit") Забронировать
        
        .cancel
        .logo-in-form        




      





        
